{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node10",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "pretty": true,
    "declaration": true,
    "outDir": "./lib",
    "removeComments": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": ["commitlint.config.js"],
  "include": ["./src"]
}
